<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoScreen">

    <View
        android:id="@+id/vBlackBox"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/IVBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/"
        app:layout_constraintTop_toTopOf="@+id/vBlackBox"
        app:layout_constraintBottom_toBottomOf="@+id/vBlackBox"
        app:layout_constraintStart_toStartOf="@+id/vBlackBox"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/TVName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Samuel Blazquez"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@+id/vBlackBox"
        app:layout_constraintBottom_toBottomOf="@+id/vBlackBox"
        app:layout_constraintStart_toEndOf="@+id/IVBack"
        app:layout_constraintEnd_toEndOf="@+id/vBlackBox"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <ImageView
        android:id="@+id/IVPhoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/"
        android:background="@drawable/circle_background"
        app:layout_constraintTop_toBottomOf="@+id/vBlackBox"
        app:layout_constraintBottom_toTopOf="@+id/VwhiteBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <View
        android:id="@+id/VwhiteBox"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#F0F0F0"
        app:layout_constraintTop_toBottomOf="@+id/IVPhoto"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/TVEmailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo Electronico"
            android:textSize="18dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>